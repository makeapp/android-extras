<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
    android:layout_height="88dp"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">
    <TextView
        android:id="@+id/dk_txt_nickname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" 
        android:textSize="14sp"
        android:visibility="gone"
        android:textColor="@color/dk_color_d70305"
        android:gravity="center"/>
    <EditText 
        android:id="@+id/dk_edit_nickname" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/dk_edittext_selector"
        android:textColor="@color/dk_color_333333"
        android:textColorHint="@color/dk_color_999999"
        android:singleLine="true"
        android:hint="@string/dk_nick_name_edit_hint"
        android:textSize="14sp"/>
    <LinearLayout 
        android:id="@+id/dkLoadingLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:visibility="gone">
        <ProgressBar 
            android:id="@+id/dkSmallPro"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			style="?android:attr/progressBarStyleSmall" 
			android:indeterminate="true"/>
		<TextView 
		    android:id="@+id/dkLoadingMsg"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:visibility="visible"
			android:layout_marginLeft="8dp" 
			android:textSize="16sp"
			android:textColor="#666666"
			android:text="@string/dk_dialog_complete_nickname_loading"/>
    </LinearLayout>
</LinearLayout>