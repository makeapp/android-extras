    <RelativeLayout 
        android:id="@+id/top_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="6dp">
        <Button
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dk_btn_close_selector"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dk_star_left"
                android:scaleType="fitXY"/>
            <TextView 
                android:id="@+id/txtCompetitionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dk_competition_title"
                android:textSize="14sp"/>    
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dk_star_right"
                android:scaleType="fitXY"/>
         </LinearLayout>
    </RelativeLayout>
	<include 
	    layout="@layout/dk_main_userinfo_layout"
	    />
    <!-- Rank  -->
	<RelativeLayout 
	    android:id="@+id/btnRankLayout"
	    android:layout_width="223dp"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="18dp"
	    android:layout_below="@+id/userInfoLayout"
	    android:layout_alignParentLeft="true"
	    android:layout_marginLeft="10dp">
        <ImageView
            android:id="@+id/imgRules"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
	        android:layout_marginLeft="-8dp"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:background="@drawable/dk_btn_tab_normal"
	        android:clickable="true"
            android:src="@drawable/dk_rules_text"
        	android:scaleType="centerInside"/>
        <ImageView
            android:id="@+id/imgTopRank"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/imgRules"
            android:layout_alignTop="@+id/imgRules"
	        android:layout_marginLeft="-8dp"
	        android:background="@drawable/dk_btn_tab_normal"
	        android:clickable="true"
            android:src="@drawable/dk_rank_top_text"
        	android:scaleType="centerInside"/>
        <ImageView
            android:id="@+id/imgMyRank"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/imgTopRank"
            android:layout_alignTop="@+id/imgTopRank"
	        android:background="@drawable/dk_btn_tab_selected"
	        android:clickable="true"
            android:src="@drawable/dk_rank_my_text"
        	android:scaleType="centerInside"/>
	</RelativeLayout>
	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/btnRankLayout"
		android:layout_alignLeft="@id/btnRankLayout"
	    android:background="@drawable/dk_rank_content_bg"
	    android:layout_marginTop="-6dp"
	    android:layout_marginBottom="16dp"

	    android:layout_marginRight="10dp">
	    <ImageView 
	        android:id="@+id/rank_bottom_bg"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/dk_rank_content_bottom_bg"
	        android:layout_alignParentBottom="true"/>
	    <LinearLayout 
	        android:id="@+id/rank_content_layout"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_above="@id/rank_bottom_bg"
	        android:layout_marginLeft="8dp"
	        android:layout_marginRight="8dp"
	        android:layout_marginTop="8dp"
	        android:layout_marginBottom="3dp">
	        
	    </LinearLayout>
	</RelativeLayout>
	<include 
	    layout="@layout/dk_loading"
	    android:layout_centerInParent="true"/>
	
</RelativeLayout>