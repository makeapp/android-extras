<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dk_layout"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:background="@drawable/dk_rank_list_item_selector">
    <TextView
        android:id="@+id/txtRankNum"
        android:layout_width="40dp"
        android:layout_height="32dp"
        android:background="@drawable/dk_rank_normal_bg"
        android:textColor="#A2745B"
        android:textSize="16sp"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>
    <RelativeLayout 
        android:id="@+id/layout_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">
        <TextView
	        android:id="@+id/txtBests"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:minWidth="80dp"
	        android:maxWidth="160dp"
	        android:singleLine="true"
	        android:textColor="#FFFFFF"
	        android:paddingLeft="30dp"
	        android:textSize="16sp"
	        android:gravity="center"
	        android:background="@drawable/dk_score_bg"
	        android:layout_centerVertical="true"/>
        <ImageView 
            android:id="@+id/topImgCup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dk_cup_hui"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
	<TextView
        android:id="@+id/txtNickname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txtRankNum"
        android:layout_toLeftOf="@id/layout_last"
        android:textColor="#A2745B"
        android:textSize="16sp"
        android:gravity="left"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"/>
</RelativeLayout>