<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dk_list_item_bg_chess">
    <LinearLayout 
        android:id="@+id/new_top_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_alignParentTop="true">
        <LinearLayout 
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">
            <TextView 
	            android:id="@+id/txtEventTitle"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:maxLines="2"
	            android:textColor="@color/dk_competition_title"
	            android:textSize="14sp"/>
            <TextView 
	            android:id="@+id/txtEventDate"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:textColor="@color/dk_chess_rankdate_text_color"
	            android:textSize="10sp"/>
            <Button 
		        android:id="@+id/viewRankLayout"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/dk_chess_viewrank_text_color"
	            android:text="@string/dk_view_rank"
	            android:textSize="12sp"
	            android:gravity="center"
	            android:paddingLeft="10dp"
	            android:paddingRight="10dp"
		        android:background="@drawable/dk_btn_view_rank_selector"/>
        </LinearLayout>
        <View 
            android:layout_width="5dp"
            android:layout_height="wrap_content"/>
        <LinearLayout 
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginRight="5dp"
            android:orientation="vertical">
            <TextView 
	            android:id="@+id/txtDoingTitle"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:textColor="@color/dk_competition_title"
	            android:textSize="14sp"
	            android:maxLines="2"/>
            <LinearLayout 
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout 
			        android:id="@+id/scoreLayout"
			        android:layout_width="0px"
			        android:layout_height="44dp"
			        android:layout_weight="1"
			        android:gravity="center"
			        android:background="@drawable/dk_bg_score"
			        android:orientation="vertical">
			        <ImageView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:src="@drawable/dk_score_small"
			            android:scaleType="fitXY"/>
			        <ImageView 
			            android:layout_width="fill_parent"
			            android:layout_height="1dp"
			            android:background="@color/dk_listview_item_chess_line"/>
			        <TextView 
			            android:id="@+id/txtScore"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:singleLine="true"
			            android:layout_gravity="center"
			            android:layout_marginTop="3dp"
			            android:textColor="@color/dk_listview_item_chess_text_num"
			            android:textSize="10sp"/>
			    </LinearLayout>
			    <View 
			        android:layout_width="6dp"
			        android:layout_height="wrap_content"/>
			    <LinearLayout 
			        android:id="@+id/rankLayout"
			        android:layout_width="0px"
			        android:layout_height="44dp"
			        android:layout_weight="1"
			        android:gravity="center"
			        android:orientation="vertical"
			        android:background="@drawable/dk_bg_score">
			        <ImageView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:src="@drawable/dk_rank_small"
			            android:scaleType="fitXY"/>
			        <ImageView 
			            android:layout_width="fill_parent"
			            android:layout_height="1dp"
			            android:background="@color/dk_listview_item_chess_line"/>
			        <TextView 
			            android:id="@+id/txtRank"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginTop="3dp"
			            android:textColor="@color/dk_listview_item_chess_text_num"
			            android:textSize="12sp"/>
			    </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- 以上为新版 -->
    <LinearLayout 
        android:id="@+id/nonawardLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/new_top_line"
        android:layout_margin="2dp"
        android:orientation="horizontal">
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dk_cry_small"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dk_chess_tip_nonaward"
            android:textColor="@color/dk_chess_rankdate_text_color"
            android:textSize="12sp"
            android:layout_marginLeft="6dp"/>
    </LinearLayout>
    <RelativeLayout 
        android:id="@+id/awardLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:layout_below="@id/new_top_line"
        android:layout_alignLeft="@id/new_top_line"
        android:layout_alignRight="@id/new_top_line"
        android:layout_margin="2dp"
        android:orientation="horizontal">
        <Button 
            android:id="@+id/btnGetAward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/dk_btn_get_award_selector"
            />
        <TextView 
            android:id="@+id/txtGetAward"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/btnGetAward"
            android:layout_centerVertical="true"
            android:text="@string/dk_chess_tip_award"
            android:textColor="@color/dk_chess_getaward_text_color"
            android:textSize="12sp"
            android:layout_marginLeft="6dp"
            />
    </RelativeLayout>
</RelativeLayout>