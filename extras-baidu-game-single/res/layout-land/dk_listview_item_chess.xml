<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/dk_list_item_bg_chess">
    <LinearLayout 
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView 
	            android:id="@+id/txtEventTitle"
	            android:layout_width="0px"
	            android:layout_height="wrap_content"
	            android:layout_weight="2"
	            android:textColor="@color/dk_competition_title"
	            android:text="竞技场下半场下半场"
	            android:textSize="14sp"/>
	        <TextView 
	            android:id="@+id/txtEventDate"
	            android:layout_width="0px"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="2011-09-76"
	            android:textColor="@color/dk_chess_rankdate_text_color"
	            android:textSize="10sp"/> 
        </LinearLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">
            <LinearLayout 
		        android:id="@+id/scoreLayout"
		        android:layout_width="0px"
		        android:layout_height="32dp"
		        android:layout_weight="1"
		        android:background="@drawable/dk_bg_score"
		        android:orientation="horizontal"
		        android:gravity="center_vertical">
		        <ImageView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:background="@drawable/dk_score_small"
		            android:layout_marginLeft="5dp"
		            android:layout_marginRight="5dp"/>
		        <ImageView 
		            android:layout_width="1dp"
		            android:layout_height="fill_parent"
		            android:background="@color/dk_listview_item_chess_line"/>
		        <TextView 
		            android:id="@+id/txtScore"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="5dp"
		            android:singleLine="true"
		            android:text="100000"
		            android:textColor="@color/dk_listview_item_chess_text_num"
		            android:textSize="12sp"/>
		    </LinearLayout>
		    <View 
		        android:layout_width="8dp"
		        android:layout_height="wrap_content"/>
		    <LinearLayout 
		        android:id="@+id/rankLayout"
		        android:layout_width="0px"
		        android:layout_height="32dp"
		        android:layout_weight="1"
		        android:orientation="horizontal"
		        android:gravity="center_vertical"
		        android:background="@drawable/dk_bg_score">
		        <ImageView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/dk_rank_small"
		            android:layout_marginLeft="5dp"
		            android:layout_marginRight="5dp"
		            android:scaleType="fitXY"/>
		        <ImageView 
		            android:layout_width="1dp"
		            android:layout_height="fill_parent"
		            android:background="@color/dk_listview_item_chess_line"/>
		        <TextView 
		            android:id="@+id/txtRank"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:gravity="center"
		            android:text="11"
		            android:textColor="@color/dk_listview_item_chess_text_num"
		            android:textSize="12sp"/>
		    </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View 
        android:layout_width="5dp"
        android:layout_height="wrap_content"/>
    <LinearLayout 
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:layout_marginRight="5dp"
        android:orientation="vertical">
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <Button 
		        android:id="@+id/viewRankLayout"
		        android:layout_width="wrap_content"
		        android:layout_height="24dp"
		        android:layout_centerVertical="true"
		        android:layout_alignParentRight="true"
		        android:textColor="@color/dk_chess_viewrank_text_color"
	            android:text="@string/dk_view_rank"
	            android:textSize="12sp"
	            android:gravity="center"
	            android:paddingLeft="10dp"
	            android:paddingRight="10dp"
		        android:background="@drawable/dk_btn_view_rank_selector"/>
            <TextView 
	            android:id="@+id/txtDoingTitle"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toLeftOf="@id/viewRankLayout"
	            android:maxLines="2"
	            android:layout_centerVertical="true"
	            android:text="百多多酷斗地主争霸赛"
	            android:textColor="@color/dk_competition_title"
	            android:textSize="12sp"
	            android:layout_marginRight="5dp"/>
        </RelativeLayout>
        <LinearLayout 
	        android:id="@+id/nonawardLayout"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:layout_marginTop="5dp"
	        android:orientation="horizontal">
	        <ImageView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/dk_cry_small"/>
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/dk_chess_tip_nonaward"
	            android:textColor="@color/dk_chess_rankdate_text_color"
	            android:textSize="12sp"
	            android:singleLine="true"
	            android:layout_marginLeft="6dp"/>
	   	</LinearLayout>
	   	<RelativeLayout 
	        android:id="@+id/awardLayout"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:visibility="gone"
	        android:orientation="horizontal">
	        <Button 
	            android:id="@+id/btnGetAward"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:background="@drawable/dk_btn_get_award_selector"/>
	        <TextView 
	            android:id="@+id/txtGetAward"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toLeftOf="@id/btnGetAward"
	            android:layout_centerVertical="true"
	            android:text="@string/dk_chess_tip_award"
	            android:textColor="@color/dk_chess_getaward_text_color"
	            android:textSize="12sp"/>
	   	</RelativeLayout>
        
    </LinearLayout>
    <!-- 以上为新版 -->
</LinearLayout>